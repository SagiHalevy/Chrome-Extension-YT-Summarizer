{
  "name": "Summarize YouTube Videos",
  "version": "1.0.0",
  "description": "Summarize YouTube Videos",
  "permissions": [
    "storage",
    "activeTab",
    "https://chrome-extension-api-server.onrender.com/getSummary"
  ],
  "icons": {
    "16": "assets/16-icon.png",
    "48": "assets/48-icon.png",
    "128": "assets/128-icon.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/16-icon.png",
      "48": "assets/48-icon.png",
      "128": "assets/128-icon.png"
    },
    "default_title": "Summarize YouTube Videos",
    "default_popup": "popup.html"
  },

  "manifest_version": 3
}
